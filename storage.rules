rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check user roles from Firestore
    function hasRole(role) {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // PDFs Raw Bucket - Crawlers upload, authenticated users read
    match /pdfs-raw/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if hasRole('admin') || hasRole('crawler');
      allow delete: if hasRole('admin');
    }
    
    // Processed Images Bucket - System writes, authenticated reads
    match /images-processed/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if hasRole('admin') || hasRole('expert');
      allow delete: if hasRole('admin');
    }
    
    // Backups Bucket - Admin only
    match /backups/{allPaths=**} {
      allow read: if hasRole('admin');
      allow write: if hasRole('admin');
      allow delete: if hasRole('admin');
    }
    
    // User uploads (for annotation interface)
    match /user-uploads/{userId}/{allPaths=**} {
      allow read: if request.auth.uid == userId || hasRole('admin');
      allow write: if request.auth.uid == userId || hasRole('admin');
      allow delete: if request.auth.uid == userId || hasRole('admin');
    }
  }
}
